package laboratoire;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import javax.swing.JLabel;

/**
 *
 * @author Kevin Nelson
 */
public class Communication implements ActionListener {

    private Ajouter ajout;
    private Repertoire rep;
    private JLabel lab;

    public Communication() {
    }

    public Communication(Ajouter ajout) {
        this.ajout = ajout;
    }

    public Communication(Ajouter ajout, Repertoire rep, JLabel lab) {
        this.ajout = ajout;
        this.rep = rep;
        this.lab = lab;
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        lab = new JLabel(ajout.getNom().getText() + ajout.getPhoneNumber().getText());
        System.out.println("Je suis ici");
        rep.add(lab);

        System.out.println("Le nom est: " + ajout.getNom().getText() + " et le phone number: " + ajout.getPhoneNumber().getText());
    }

}
